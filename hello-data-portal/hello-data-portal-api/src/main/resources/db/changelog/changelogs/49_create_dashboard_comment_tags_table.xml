<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="49-1" author="hellodata">
        <comment>Create dashboard_comment_tag table for storing tags associated with comments</comment>
        <createTable tableName="dashboard_comment_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="comment_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="tag" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="dashboard_comment_tag"
                baseColumnNames="comment_id"
                constraintName="fk_comment_tag_comment"
                referencedTableName="dashboard_comment"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex indexName="idx_comment_tag_comment_id" tableName="dashboard_comment_tag">
            <column name="comment_id"/>
        </createIndex>

        <createIndex indexName="idx_comment_tag_tag" tableName="dashboard_comment_tag">
            <column name="tag"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

