<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql"/>

    <changeSet id="63-1" author="hellodata">
        <comment>Create user_selected_dashboard table</comment>
        <createTable tableName="user_selected_dashboard">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="user_id" type="${uuid_type}">
                <constraints nullable="false"/>
            </column>
            <column name="dashboard_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="dashboard_title" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="context_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="instance_name" type="varchar(500)"/>
            <column name="created_date" type="timestamp"/>
            <column name="created_by" type="varchar(150)"/>
            <column name="modified_date" type="timestamp"/>
            <column name="modified_by" type="varchar(150)"/>
        </createTable>
    </changeSet>

    <changeSet id="63-2" author="hellodata">
        <comment>Add foreign key from user_selected_dashboard to users</comment>
        <addForeignKeyConstraint
                baseTableName="user_selected_dashboard"
                baseColumnNames="user_id"
                constraintName="fk_user_selected_dashboard_user"
                referencedTableName="user_"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="63-3" author="hellodata">
        <comment>Add unique constraint on user_id, dashboard_id, context_key</comment>
        <addUniqueConstraint
                tableName="user_selected_dashboard"
                columnNames="user_id, dashboard_id, context_key"
                constraintName="uq_user_dashboard_context"/>
    </changeSet>

    <changeSet id="63-4" author="hellodata">
        <comment>Add indexes on user_id and context_key</comment>
        <createIndex tableName="user_selected_dashboard" indexName="idx_user_selected_dashboard_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="user_selected_dashboard" indexName="idx_user_selected_dashboard_context_key">
            <column name="context_key"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
